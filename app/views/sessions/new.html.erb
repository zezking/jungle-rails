<h1>Login</h1>
 <div class="col-sm-3 col-sm-offset-1">
    <div class="form-group">
    <%= form_tag '/login' do %>
    Email: <%= text_field_tag :email, "", class: 'form-control'%>
    Password: <%= password_field_tag :password, "", class: 'form-control' %>
  </div>

       <%= submit_tag "Submit", class: 'btn btn-primary'%>
</div>
<% end %>